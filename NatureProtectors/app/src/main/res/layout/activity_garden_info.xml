<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GardenInfo">

    <ImageView
        android:id="@+id/plants_selection_smarty_says_bg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/StringValueForImageView"
        app:layout_constraintBottom_toBottomOf="@+id/garden_info_smarty_char"
        app:layout_constraintEnd_toEndOf="@+id/garden_info_blueprint_btn"
        app:srcCompat="@drawable/garden_registration_smarty_says_background"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/garden_info_smarty_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/StringValueForImageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/garden_info_blueprint_btn"
        app:srcCompat="@drawable/garden_registration_smarty_char"
        tools:ignore="ImageContrastCheck" />

    <ImageButton
        android:id="@+id/garden_info_camera_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/StringValueForImageButton"
        android:minWidth="48dp"
        android:minHeight="56dp"
        app:layout_constraintEnd_toEndOf="@+id/garden_info_location"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/garden_info_camera_btn"
        tools:ignore="DuplicateSpeakableTextCheck,MissingConstraints" />

    <TextView
        android:id="@+id/garden_info_garden_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/sample"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/garden_info_camera_btn"
        app:layout_constraintEnd_toStartOf="@+id/garden_info_camera_btn"
        app:layout_constraintStart_toStartOf="@+id/garden_info_description_icon"
        app:layout_constraintTop_toTopOf="@+id/garden_info_camera_btn" />

    <ImageView
        android:id="@+id/garden_info_description_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/StringValueForImageView"
        app:layout_constraintStart_toStartOf="@+id/garden_info_location"
        app:layout_constraintTop_toBottomOf="@+id/garden_info_camera_btn"
        app:srcCompat="@drawable/garden_info_description" />

    <TextView
        android:id="@+id/garden_info_gardening_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/sample"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/garden_info_description_icon"
        app:layout_constraintStart_toEndOf="@+id/garden_info_description_icon"
        app:layout_constraintTop_toTopOf="@+id/garden_info_description_icon" />

    <ImageView
        android:id="@+id/garden_info_garden_plants_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/StringValueForImageView"
        app:layout_constraintStart_toStartOf="@+id/garden_info_description_icon"
        app:layout_constraintTop_toBottomOf="@+id/garden_info_location"
        app:srcCompat="@drawable/garden_info_garden_plants_bg" />

    <ImageView
        android:id="@+id/garden_info_garden_gallery_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/StringValueForImageView"
        app:layout_constraintStart_toStartOf="@+id/garden_info_garden_plants_bg"
        app:layout_constraintTop_toBottomOf="@+id/garden_info_garden_plants_bg"
        app:srcCompat="@drawable/garden_info_garden_gallery_bg" />

    <ImageView
        android:id="@+id/garden_info_blueprint_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/StringValueForImageView"
        app:layout_constraintStart_toStartOf="@+id/garden_info_garden_gallery_bg"
        app:layout_constraintTop_toBottomOf="@+id/garden_info_garden_gallery_bg"
        app:srcCompat="@drawable/garden_info_blueprint_btn" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/garden_info_gallery"
        android:layout_width="308dp"
        android:layout_height="170dp"
        android:paddingStart="4dp"
        android:paddingTop="34dp"
        android:paddingEnd="84dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/garden_info_garden_gallery_bg"
        app:layout_constraintEnd_toEndOf="@+id/garden_info_garden_gallery_bg"
        app:layout_constraintStart_toStartOf="@+id/garden_info_garden_gallery_bg" />

    <TextView
        android:id="@+id/garden_info_garden_plants_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/garden_info_garden_plants"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/garden_info_garden_plants_bg"
        app:layout_constraintTop_toTopOf="@+id/garden_info_garden_plants_bg" />

    <TextView
        android:id="@+id/garden_info_garden_gallery_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/garden_info_garden_gallery"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/garden_info_garden_gallery_bg"
        app:layout_constraintTop_toTopOf="@+id/garden_info_garden_gallery_bg" />

    <ImageButton
        android:id="@+id/garden_info_gallery_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/StringValueForImageButton"
        android:minWidth="48dp"
        android:minHeight="56dp"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="@+id/garden_info_garden_gallery_bg"
        app:layout_constraintEnd_toEndOf="@+id/garden_info_garden_gallery_bg"
        app:layout_constraintTop_toTopOf="@+id/garden_info_garden_gallery_bg"
        app:srcCompat="@drawable/progress_prev"
        tools:ignore="DuplicateSpeakableTextCheck,MissingConstraints" />

    <TextView
        android:id="@+id/garden_info_smarty_says_txt"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/sample"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/plants_selection_smarty_says_bg2"
        app:layout_constraintEnd_toEndOf="@+id/plants_selection_smarty_says_bg2"
        app:layout_constraintStart_toStartOf="@+id/plants_selection_smarty_says_bg2"
        app:layout_constraintTop_toTopOf="@+id/plants_selection_smarty_says_bg2" />

    <FrameLayout
        android:id="@+id/garden_info_location"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/garden_info_description_icon">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/garden_info_garden_plants"
        android:layout_width="308dp"
        android:layout_height="98dp"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/garden_info_garden_plants_bg"
        app:layout_constraintEnd_toEndOf="@+id/garden_info_garden_plants_bg"
        app:layout_constraintStart_toStartOf="@+id/garden_info_garden_plants_bg"
        app:layout_constraintTop_toTopOf="@+id/garden_info_garden_plants_bg">

        <ImageView
            android:id="@+id/garden_info_garden_tomato"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="@string/StringValueForImageView"
            android:visibility="gone"
            app:srcCompat="@drawable/garden_blueprint_drag_plants_tomato" />

        <ImageView
            android:id="@+id/garden_info_garden_potato"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="@string/StringValueForImageView"
            android:visibility="gone"
            app:srcCompat="@drawable/garden_blueprint_drag_plants_potato" />

        <ImageView
            android:id="@+id/garden_info_garden_lettuce"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="@string/StringValueForImageView"
            android:visibility="gone"
            app:srcCompat="@drawable/garden_blueprint_drag_plants_lettuce" />

        <ImageView
            android:id="@+id/garden_info_garden_cherry"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="@string/StringValueForImageView"
            android:visibility="gone"
            app:srcCompat="@drawable/garden_blueprint_drag_plants_cherry" />

        <ImageView
            android:id="@+id/garden_info_garden_sunflower"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="@string/StringValueForImageView"
            android:visibility="gone"
            app:srcCompat="@drawable/garden_blueprint_drag_plants_sunflower" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>